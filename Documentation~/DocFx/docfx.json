{
    "metadata": [
        {
            "src": [
                {
                    "src": "../../Runtime",
                    "files": [
                        "**/*.cs"
                    ],
                    "exclude": [
                        "**/Plugins/**"
                    ]
                }
            ],
            "force": true,
            "globalNamespaceId": "Global",
            "filter": "filterConfig.yml",
            "dest": "api"
        }
    ],
    "build": {
        "globalMetadata": {
            "_appTitle": "Package",
            "_appFooter": "Jelle Vermandere",
            "_appLogoPath": "resources/logo.svg", 
            "_appFaviconPath": "resources/favicon.ico",
            "_enableSearch": true
        },
        "content": [
            {
                "files": [
                    "toc.yml",
                    "index.md"
                ]
            },
            {
                "src": "api",
                "files": [
                    "*.yml"
                ],
                "dest": "api"
            },
            {
                "src": "manual",
                "files": [
                    "toc.yml",
                    "*.md"
                ],
                "dest": "manual"
            }
        ],
        "overwrite": [
            {
                "src": "../..",
                "files": [
                    "Runtime/*.md",
                    "Runtime/**/*.md"
                ]
            }
        ],
        "resource": [
            {
                "files": [
                    "resources/**/*"
                ]
            }
        ],
        "sitemap": {
            "baseUrl": "https://jellevermandere.github.io/",
            "changefreq": "weekly",
            "fileOptions": {
                "api/*": {
                    "changefreq": "daily"
                }
            }
        },
        "xref": [
            "https://normanderwan.github.io/UnityXrefMaps/xrefmap.yml"
        ],
        "xrefService": [
            "https://xref.docs.microsoft.com/query?uid={uid}"
        ],
        "dest": "_site"
    }
}